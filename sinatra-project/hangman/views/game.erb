<html>
  <head></head>
  <body>
    <h1>Hangman</h1>
    <p>
      <%= current %>
    </p>
    <p>
      Remaining Guesses: <%= remaining_guesses %>
    </p>
    <p>
      <%= guesses.join ', ' %>
    </p>
    <form action='/guess' method='post'>
      <input type='text' maxlength='1' name='guess' required />
      <input type='submit' value='Guess' />
    </form>
  </body>
</html>
